<%-include("./partials/header.ejs")%>

<div class="container mt-5" style="margin-top: 20px;">
    <h3 style="text-align: center;">Add New Record</h3>
    <form action="/addrecord" method="POST" style="width: 50%; margin:0 auto;">
        <div class="form-group">
            <p>First Name:</p>
            <input class="form-control" type="text" name="Firstn" placeholder="Enter First Name" Required>
        </div>
        <div class="form-group">
            <p>Last Name:</p>
            <input class="form-control" type="text" name="Lastn" placeholder="Enter Last Name" Required>
        </div>
        <div class="form-group">
            <p>Location:</p>
            <input class="form-control" type="text" name="location" placeholder="Enter Location" Required>
        </div>
        <div class="form-group">
            <p>Date of Birth:</p>
            <input class="form-control" type="text" name="dob" placeholder="Enter Date of Birth" Required>
        </div>
        <div class="form-group">
            <p>Time of Birth:</p>
            <input class="form-control" type="text" name="tob" placeholder="Enter Time of Birth" Required>
        </div>
        <div class="form-group">
            <p>Certifying Authority:</p>
            <input class="form-control" type="text" name="certifby" placeholder="Enter certifying authority" Required>
        </div>
        <button class="btn btn-lg btn-block btn-primary">Submit!</button>
        <a href="/">Go Back!</a>
    </form>
</div>

<%-include("./partials/footer.ejs")%>